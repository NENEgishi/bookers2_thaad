<% if flash[:in] %>
<div class="flash">
	<%= flash[:in] %>
</div>
<% end %>

<% if flash[:user_update] %>
<div class="flash">
	<%= flash[:user_update] %>
</div>
<% end %>

<div class= container>
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<table class="table table-striped">
				<tbody>
					<tr>
						<th>
							<%=link_to user_path(@user) do%>
							<%=attachment_image_tag @user, :profile_image, :fill,60, 60, format: 'jpeg',class:"profile_image" , fallback:"no_image.jpg",size:'40x40' %>
							<% end %>
						</th>
					</tr>
					<tr>
						<th><h5>name</h5></th>
						<th><%=@user.name%></th>
					</tr>
					<tr>
						<th><h5>introduction</h5></th>
						<th><%=@user.introduction%></th>
					</tr>
				</tbody>
			</table>
			<%= link_to '', edit_user_path(@user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

			<!-- 部分テンプレート -->
			<%=render 'users/list',book:@book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Body</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%=link_to user_path(@user) do%>
							<%=attachment_image_tag @user, :profile_image, :fill,30, 30, format: 'jpeg',class:"profile_image" , fallback:"no_image.jpg",size:'40x40' %>
							<% end %>
						</td>
						<td><%=link_to book.title,book_path(book.id) %></td>
						<td><%=book.body%></td>
						<td></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


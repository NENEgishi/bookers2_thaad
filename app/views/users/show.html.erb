<% if flash[:in] %>
<div class="flash">
	<%= flash[:in] %>
</div>
<% end %>
<% if flash[:user_update] %>
<div class="flash">
	<%= flash[:user_update] %>
</div>
<% end %>
<div class= container>
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<table class="table table-striped">
				<tbody>
					<tr>
						
						<th>
							<% if @user.profile_image_id != nil%>
							<%=attachment_image_tag @user, :profile_image, :fill,30, 30, format: 'jpeg',class:"profile_image" %>
							<% else %>
							<img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image"/>
							<% end %>
						</th>
					</tr>
					<tr>
						<th><h5>name</h5></th>
						<th><%=@user.name%></th>
					</tr>
					<tr>
						<th><h5>introduction</h5></th>
						<th><%=@user.introduction%></th>
					</tr>
				</tbody>
			</table>
			<%= link_to '', edit_user_path(@user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

			<h2>New book</h2>
			<%=form_for(@book) do |f|%>
			<h4>Title</h4>
			<%=f.text_field :title%>
			<h4>Body</h4>
			<%=f.text_area :body%><br>
			<!-- <span><%=f.submit %></span> -->
			<button class="btn btn-primary" type="submit">Create Book</button>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Body</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<!-- <%=attachment_image_tag @user, :profile_image, :fill,30, 30, format: 'jpeg' %> -->
							<% if @user.profile_image_id != nil%>
							<%=attachment_image_tag @user, :profile_image, :fill,30, 30, format: 'jpeg',class:"profile_image" %>
							<% else %>
							<img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image"/>
							<% end %>
						</td>
						<td><%=link_to book.title,book_path(book.id) %></td>
						<td><%=book.body%></td>
						<td></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

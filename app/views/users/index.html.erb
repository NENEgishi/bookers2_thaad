<div class=container>
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<table class="table table-striped">
				<tbody>
					<tr>
						<th><%=attachment_image_tag current_user, :profile_image, :fill,60,60,format:'jpeg',class:"profile_image", fallback:"no_image.jpg",size:'40x40' %></th>
					</tr>
					<tr>
						<th><h5>name</h5></th>
						<th><%=current_user.name%></th>
					</tr>
					<tr>
						<th><h5>introduction</h5></th>
						<th><%=current_user.introduction%></th>
					</tr>
				</tbody>
			</table>

			<%= link_to '', edit_user_path(current_user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
			<!-- 部分テンプレート -->
			<%=render 'users/list',book:@book %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>profile_image_id</th>
						<th>name</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%=attachment_image_tag user, :profile_image, :fill,30,30,format:'jpeg',class:"profile_image",fallback:"no_image.jpg",size:'40x40' %>
							<td><%=user.name%></td>
							<td><%=link_to 'Show',user_path(user) %></td>
							<td></td>
							<td></td>
						</tr>
						<%end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>